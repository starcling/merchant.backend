{
  "name": "puma_merchant_backend",
  "version": "0.0.1",
  "description": "Pumapay merchant backend server",
  "main": "index.js",
  "scripts": {
    "start": "npm run build &&  pm2-runtime start  dist/src/index.js --name 'merchant.backend'",
    "dev": "nodemon -L",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "node_modules/.bin/tslint --fix -c tslint.json 'src/**/*.ts'",
    "nodemon": "node_modules/.bin/nodemon",
    "mocha": "node_modules/.bin/mocha",
    "docker": "sh ./scripts/docker.sh",
    "debug": "nodemon -L --inspect",
    "test": "npm run lint && npm run test-e2e && npm run test-unit",
    "test-e2e": "mocha --timeout 15000 -r ts-node/register test/e2e/**/*.ts",
    "test-unit": "mocha --timeout 15000 -r ts-node/register test/unit/**/*.ts"
  },
  "keywords": [
    "cryptocurrency",
    "crypto-payments",
    "pumapay",
    "Pull Payment Protocol"
  ],
  "author": "developers@pumapay.io",
  "license": "MIT",
  "dependencies": {
    "@pumapay/merchant_sdk": "2.0.0-alpha07",
    "@sendgrid/mail": "^6.3.1",
    "@types/body-parser": "^1.16.8",
    "@types/cors": "^2.8.3",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.2",
    "@types/pg": "^7.4.10",
    "aws-sdk": "^2.339.0",
    "bip39": "^2.5.0",
    "bluebird": "^3.5.1",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-wallet": "^0.6.2",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "mysql": "^2.16.0",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "routing-controllers": "^0.7.7",
    "sinon": "^7.0.0",
    "solc": "0.4.24",
    "typedi": "^0.7.2",
    "typescript": "^2.8.1",
    "web3": "^1.0.0-beta.34",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.0.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.0.0",
    "chai-match": "^1.1.1",
    "concurrently": "^3.5.1",
    "gulp": "^3.9.1",
    "gulp-apidoc-swagger": "^0.2.2",
    "gulp-typedoc": "^2.2.0",
    "husky": "^1.0.0-rc.13",
    "joi": "^13.4.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.3",
    "nyc": "^13.0.1",
    "supertest": "^3.0.0",
    "swagger-ui-express": "^3.0.10",
    "ts-node": "~4.1.0",
    "tslint": "^5.9.1",
    "tslint-microsoft-contrib": "^5.0.3",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.1",
    "yamljs": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
